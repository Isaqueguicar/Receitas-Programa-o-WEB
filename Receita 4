# codigo html

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Lista de Cervejas</title>
    <link rel="stylesheet" href="estilo.css">
</head>
<body>

    <!-- Botões -->
    <div id="divBotoes">
        <button id="botaoMostrar">Mostrar Cervejas</button>
        <button id="botaoOrdenar">Ordenar Cervejas</button>
        <button id="botaoEmbaralhar">Embaralhar Cervejas</button>
    </div>

    <!-- Div onde a lista/tabela de cervejas será exibida -->
    <div id="meuAmor"></div>

    <script>
        let cervejas = ["Guiness", "Desperados", "Becks"];

        const divAmor = document.getElementById("meuAmor");
        const botaoMostrar = document.getElementById("botaoMostrar");
        const botaoOrdenar = document.getElementById("botaoOrdenar");
        const botaoEmbaralhar = document.getElementById("botaoEmbaralhar");

        // Transforma array de cervejas em tabela HTML
        function renderTabela(array) {
            const linhas = array.map(item => `<tr><td class="cervejaItem">${item}</td></tr>`);
            return `<table class="tabelaCervejas">
                        <thead>
                            <tr><th>Cerveja</th></tr>
                        </thead>
                        <tbody>
                            ${linhas.join("\n")}
                        </tbody>
                    </table>`;
        }

        // Mostrar lista
        botaoMostrar.addEventListener("click", () => {
            divAmor.innerHTML = renderTabela(cervejas);
        });

        // Ordenar lista
        botaoOrdenar.addEventListener("click", () => {
            const cervejasOrdenadas = [...cervejas].sort(); // sort() padrão
            divAmor.innerHTML = renderTabela(cervejasOrdenadas);
        });

        // Embaralhar lista
        botaoEmbaralhar.addEventListener("click", () => {
            const cervejasEmbaralhadas = [...cervejas].sort(() => Math.random() - 0.5); // método conhecido
            divAmor.innerHTML = renderTabela(cervejasEmbaralhadas);
        });

    </script>
</body>
</html>

#codigo css

/* Botões */
#divBotoes {
    margin-bottom: 20px;
}

#divBotoes button {
    margin-right: 10px;
    padding: 8px 16px;
    font-size: 1em;
    border: none;
    border-radius: 6px;
    background-color: #0b6fb6;
    color: white;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

#divBotoes button:hover {
    background-color: #084a86;
}

/* Div que exibe as cervejas */
#meuAmor {
    margin-top: 20px;
}

/* tabela de cervejas */
.tabelaCervejas {
    width: 50%;
    border-collapse: collapse;
    margin-top: 10px;
}

.tabelaCervejas th {
    background-color: #2b7a78;
    color: white;
    padding: 8px 12px;
}

.tabelaCervejas td {
    border: 1px solid #999;
    padding: 8px 12px;
    text-align: center;
}

/* estilo individual para cada div de cerveja */
.cervejaItem {
    font-weight: bold;
    color: #b23a48;
}
