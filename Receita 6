<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <style>
      /* ---- estilos da tabela ---- */
      .tabela-bonita {
        width: 100%;
        max-width: 760px;
        border-collapse: collapse;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        overflow: hidden;
        margin-top: 12px;
      }
      .tabela-bonita thead th {
        background: #f3f4f6;
        font-weight: 600;
      }
      .tabela-bonita th,
      .tabela-bonita td {
        padding: 12px 14px;
        border-bottom: 1px solid #e5e7eb;
        text-align: left;
      }
      .tabela-bonita tbody tr:nth-child(even) {
        background: #fafafa;
      }
      .tabela-bonita tbody tr:hover {
        background: #eef6ff;
      }
      #botaoCarregar {
        padding: 8px 14px;
        border-radius: 8px;
        border: 1px solid #d1d5db;
        background: #ffffff;
        cursor: pointer;
      }
      #botaoCarregar:hover {
        background: #f9fafb;
      }
    </style>
  </head>

  <body>
    <div>
      <button id="botaoCarregar">Carregar cervejas...</button>
    </div>
    <div id="cervejasDiv"></div>
  </body>

  <script>
    // vetor com novas propriedades: style e ibu (todas strings)
    let cervejas = [
      { name: "Guinness",    alcohol: "10%", style: "Imperial Stout", ibu: "45" },
      { name: "Desperados",  alcohol: "6%",  style: "Lager",          ibu: "22" },
      { name: "Becks",       alcohol: "5%",  style: "Pilsen",         ibu: "18" }
    ];

    // cria HTML da tabela a partir de: itens, cabeçalhos e propriedades
    const criarTabelaHTML = (itens = [], headers = [], props = []) => {
      const thead = `<thead><tr>${headers.map(h => `<th>${h}</th>`).join("")}</tr></thead>`;
      const tbody = `<tbody>${
        itens.map(obj =>
          `<tr>${props.map(p => `<td>${obj?.[p] ?? ""}</td>`).join("")}</tr>`
        ).join("")
      }</tbody>`;
      return `<table class="tabela-bonita">${thead}${tbody}</table>`;
    };

    /**
     * Carrega uma tabela em um container arbitrário.
     * @param {Array<Object>} cs - vetor de objetos (default: [])
     * @param {Object} opts - opções
     * @param {string} opts.containerId - id do container (default: "cervejasDiv")
     * @param {Array<string>} opts.headers - cabeçalhos (default: ["Nome","Álcool","Estilo","Amargor"])
     * @param {Array<string>} opts.props - props a renderizar (default: ["name","alcohol","style","ibu"])
     */
    const carregarDiv = (
      cs = [],
      {
        containerId = "cervejasDiv",
        headers = ["Nome", "Álcool", "Estilo", "Amargor"],
        props = ["name", "alcohol", "style", "ibu"]
      } = {}
    ) => {
      const container = document.getElementById(containerId);
      if (!container) return;
      container.innerHTML = criarTabelaHTML(cs, headers, props);
    };

    // mesmo comportamento: clique carrega a tabela no #cervejasDiv
    const botao = document.getElementById("botaoCarregar");
    botao.addEventListener("click", () => carregarDiv(cervejas));
  </script>
</html>
