<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">      
  </head>
  <body>
    <div>
      <a href="#" id="linkCarregar">Carregar sorvetes...</a>
    </div>

    <div id="listaSorvetes"></div>            

    <script>
      let sorvetes = ["Chocolate", "Morango", "Baunilha", "Pistache", "Limão"]

      // Função refatorada para receber o parâmetro cervs
      const carregarDiv = (cervs) => {
        const div = document.getElementById("listaSorvetes")
        const sorvetesHtml = cervs.map(item => `<h1>${item}</h1>`)
        div.innerHTML = sorvetesHtml.join("\n")
      }

      // Link chamando a função com o array sorvetes
      const link = document.getElementById("linkCarregar")
      link.addEventListener("click", (event) => {
        event.preventDefault() // impede o link de recarregar a página
        carregarDiv(sorvetes)
      })
    </script>
</html>
