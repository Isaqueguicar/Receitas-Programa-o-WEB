# codigo css
/* versos comuns */
p.verso {
   color: blue;
}

/* versos finais (mote) */
p.mote {
   color: red;
   font-weight: bold;
}

/* estilo dos links */
a.link-poeta {
   color: green;
   text-decoration: none;
}

a.link-poeta:hover {
   color: orange;
   text-decoration: underline;
}

a.link-poeta:visited {
   color: purple;
}

/* imagem arredondada estilo avatar */
.avatar {
   width: 100px;
   height: 100px;
   border-radius: 50%;
   object-fit: cover;
}

/* qualquer img dentro de .poeta também fica arredondada */
.poeta img {
   border-radius: 50%;
}

/* estilo dos cabeçalhos da tabela */
th {
   background-color: #444;
   color: white;
   padding: 8px;
}
